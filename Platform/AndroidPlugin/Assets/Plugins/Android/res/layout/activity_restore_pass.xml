<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".activity.ChangePassActivity" >

    <EditText
        android:id="@+id/etUsername"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:singleLine="true"
        android:imeOptions="actionNext"
        android:hint="输入手机号" >
        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/btnGetVerifyCode"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/etVerifyCode"
        android:layout_below="@+id/etUsername"
        android:text="获取验证码" />

    <EditText
        android:id="@+id/etVerifyCode"
        android:layout_marginLeft="130dp"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etUsername"
        android:ems="10"
        android:singleLine="true"
        android:imeOptions="actionNext"
        android:hint="输入验证码" />
    
    <EditText
        android:id="@+id/etPasswordNew"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnGetVerifyCode"
        android:layout_centerHorizontal="true"
        android:imeOptions="actionDone"
        android:hint="输入新密码"
        android:ems="10"
        android:singleLine="true"
        android:inputType="textPassword" >
    </EditText>

    <Button
        android:id="@+id/btnChangePass"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etPasswordNew"
        android:layout_centerHorizontal="true"
        android:text="修改" />

</RelativeLayout>